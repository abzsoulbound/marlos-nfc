generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id        String       @id @default(cuid())
  table     String
  status    OrderStatus  @default(OPEN)
  createdAt DateTime     @default(now())
  items     OrderItem[]
}

model OrderItem {
  id       String  @id @default(cuid())
  orderId String
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  itemId   String
  name     String
  price    Float
  quantity Int
}

enum OrderStatus {
  OPEN
  PENDING_ASSIGNMENT
  ACCEPTED
  READY
  DELIVERED
  CLOSED
}

enum StaffRole {
  BAR
  KITCHEN
  FLOOR
}
